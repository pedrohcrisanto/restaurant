extends: default

ignore:
  - "swagger/**/*.yaml"
  - "public/**/*.yaml"
  - "tmp/**/*.yaml"
  - "vendor/**/*.yaml"
  - "swagger/**/*.yml"
  - "public/**/*.yml"
  - "tmp/**/*.yml"
  - "vendor/**/*.yml"

rules:
  document-start: disable
  truthy: disable
  brackets: disable
  empty-lines: disable
  line-length:
    max: 120
    allow-non-breakable-words: true
    level: warning
  indentation:
    indent-sequences: consistent
